<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_grid"
        android:layout_width="160dp"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2A009688">

            <ImageView
                android:id="@+id/ivimg_grid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sample_grid"/>

            <TextView
                android:id="@+id/tvjudul_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivimg_grid"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="Judul Tempat"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvjudul_grid"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Location"
                android:layout_marginBottom="8dp"
                app:fontFamily="@font/antic_slab" />

            <TextView
                android:id="@+id/desc_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_grid"
                android:gravity="center"
                android:lines="2"
                android:text="@string/des"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>