<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Delay_pos"
    android:background="#1422FFED">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ci_icon_delay"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/indonesia"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ci_icon_delay"
            android:layout_centerInParent="true"
            android:text="Trust Me Indonesian Is Wonderfull"
            android:textColor="#A53817"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/bad_script" />


    </RelativeLayout>


</LinearLayout>